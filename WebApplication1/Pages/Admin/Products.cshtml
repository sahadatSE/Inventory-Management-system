@page
@model Web.Pages.Admin.ProductModel
@{
    ViewData["Title"] = "Product";
}

<h3 class="mb-3">
    @(Model.model.P_Id == 0 ? "Add Product" : "Edit Product")
</h3>

<form method="post" class="row g-3">

    <!-- Hidden ID for Edit -->
    <input type="hidden" asp-for="model.P_Id" />

    <!-- Product Name -->
    <div class="col-md-6">
        <label class="form-label">Product Name</label>
        <input class="form-control" asp-for="model.P_Name" />
        <span class="text-danger" asp-validation-for="model.P_Name"></span>
    </div>

    <!-- Product Quantity -->
    <div class="col-md-3">
        <label class="form-label">Quantity</label>
        <input class="form-control" asp-for="model.P_Quantity" />
        <span class="text-danger" asp-validation-for="model.P_Quantity"></span>
    </div>

    <!-- Product Price -->
    <div class="col-md-3">
        <label class="form-label">Price</label>
        <input class="form-control" asp-for="model.P_Price" />
        <span class="text-danger" asp-validation-for="model.P_Price"></span>
    </div>

    <!-- Supplier ID -->
    <div class="col-md-6">
        <label class="form-label">Supplier ID</label>
        <input class="form-control" asp-for="model.S_Id" />
        <span class="text-danger" asp-validation-for="model.S_Id"></span>
    </div>

    <!-- Buttons -->
    <div class="col-12 d-flex gap-2 mt-3">
        <button type="submit" class="btn btn-primary">
            @(Model.model.P_Id == 0 ? "Save" : "Update")
        </button>

        <a asp-page="/Admin/ProductList" class="btn btn-secondary">
            Back to List
        </a>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
